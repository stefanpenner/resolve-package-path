{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2018",
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["tests"]
}
